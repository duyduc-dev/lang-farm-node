<!-- Begin: sidebar mobile -->
<div x-show="visibleSidebar" x-transition @click.away="visibleSidebar = false" class="bg-erie_black w-[260px]">
  <div class="pt-6 px-9 pb-[72px]">
    <div>
      <template x-data x-for="header in $store.rawHeader">
        <div
          x-data="{ hasChild: !!header.children, showChild: false }"
          class="font-[300] text-[13px] py-2 cursor-pointer">
          <div class="flex items-center">
            <div
              x-text="hasChild ? showChild ? '-' : '+' : ''"
              class="mr-2 text-white select-none"
              @click="showChild = !showChild"></div>
            <a
              :href="header.html"
              x-text="header.title"
              class="text-white uppercase tracking-[2px] hover:text-tiger_eye transition-all duration-300"
              :class="$store.router.pathname === header.html && '!text-tiger_eye'"></a>
          </div>
          <div x-data="" x-show="showChild" class="flex flex-col pl-4 text-white" @click.away="showChild = false">
            <template x-data="" x-for="item in header.children">
              <a
                :href="item.html"
                x-text="item.title"
                class="hover:text-tiger_eye transition-all duration-300 font-[300] text-[13px] uppercase py-1"></a>
            </template>
          </div>
        </div>
      </template>
    </div>
  </div>
</div>
<!-- End: sidebar mobile -->
